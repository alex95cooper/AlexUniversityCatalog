<Window x:Class="AlexUniversityCatalog.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AlexUniversityCatalog"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Welcome to &lt;Alex University/>" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24"/>
        <Button Grid.Row="1" Content="Faculties" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="24"/>
        <Button Grid.Row="2" Content="Subjects" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="24"/>
        <Button Grid.Row="3" Content="Teachers" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="24"/>
        <Button Grid.Row="4" Content="Students" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="24"/>
    </Grid>
</Window>
