<Window x:Class="AlexUniversityCatalog.TableWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AlexUniversityCatalog"
        mc:Ignorable="d"
        Title="TableWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="250"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="TableNameBlock" Grid.Row="0" Text="Subjects" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5" FontSize="24"/>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Height="30" Width="60"  VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button x:Name="Previous" Width="30" Click="Previous_Click">←</Button>
            <Button x:Name="Next" Width="30" Click="Next_Click">→</Button>
        </StackPanel>
        <TextBlock x:Name="PagesQuantityBlock" Grid.Row="0"  VerticalAlignment="Center" HorizontalAlignment="Right" Margin="5" FontSize="20" Foreground="SlateGray"/>
        <DataGrid x:Name="Table" Grid.Row="1" Margin="5" BorderThickness="2" CanUserAddRows="False" LoadingRow="Table_LoadingRow"/>
    </Grid>
</Window>
